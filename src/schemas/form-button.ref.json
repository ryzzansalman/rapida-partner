{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "form-button.ref.json",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "button"
            ]
        },
        "actionType": {
            "type": "string",
            "enum": [
                "submit",
                "link",
                "reset",
                "sendEmail"
            ]
        },
        "id": {
            "type": "string"
        },
        "label": {
            "type": "string"
        },
        "icon": {
            "type": "string"
        },
        "conditions": {
          "$ref": "form-common-conditions.ref.json"
        },
        "apiRequest": {
          "$ref": "form-common-api-request.ref.json"
        }
    },
    "required": [
        "type",
        "actionType",
        "id",
        "label"
    ]
}