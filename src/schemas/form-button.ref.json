{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "form-button.ref.json",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "button"
    },
    "id": {
      "type": "string"
    },
    "actionType": {
      "type": "string",
      "enum": ["submit", "reset", "link", "apiRequest"]
    },
    "label": {
      "type": "string"
    },
    "todo": {
      "type": "string",
      "nullable": true
    },
    "icon": {
      "type": "string",
      "nullable": true
    },
    "isDisabled": {
      "type": "boolean",
      "nullable": true
    },
    "conditions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/IFormCondition"
      },
      "nullable": true
    },
    "apiRequest": {
      "$ref": "#/definitions/IApiRequest",
      "nullable": true
    }
  },
  "required": ["type", "id", "label", "actionType"]
}
