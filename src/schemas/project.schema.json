{
  "$id": "project.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "businessPlan": {
      "$ref": "business-plan.ref.json"
    },
    "businessRules": {
      "$ref": "business-rules.ref.json"
    },
    "frontend": {
      "type": "object",
      "properties": {
        "framework": {
          "type": "string",
          "enum": [
            "angular",
            "flutter",
            "react",
            "svelte",
            "vue"
          ]
        },
        "uiKit": {
          "type": "string",
          "enum": [
            "antdesign",
            "bootstrap",
            "material",
            "flowbite"
          ]
        }
      },
      "required": [
        "framework",
        "uiKit"
      ]
    },
    "backend": {
      "type": "object",
      "properties": {
        "framework": {
          "type": "string",
          "enum": [
            "functions",
            "lambda",
            "laravel",
            "nest"
          ]
        },
        "database": {
          "type": "string",
          "enum": [
            "mariadb",
            "mongodb",
            "oracle",
            "postgresql"
          ]
        }
      },
      "required": [
        "framework",
        "database"
      ]
    },
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "elements": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["forms", "lists", "displays", "charts"]
                },
                "id": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "forms": {
      "$ref": "form.ref.json"
    },
    "lists": {
      "$ref": "list.ref.json"
    },
    "displays": {},
    "charts": {}
  },
  "required": [
    "id",
    "title",
    "description"
  ]
}