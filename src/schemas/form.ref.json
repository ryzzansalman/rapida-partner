{
    "$id": "form.ref.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string"
            },
            "title": {
                "type": "string"
            },
            "icon": {
                "type": "string"
            },
            "guards": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "businessRules": {
                "$ref": "business-rules.ref.json"
            },
            "elements": {
                "type": "array",
                "items": {
                    "oneOf": [
                        {
                            "$ref": "form-array.ref.json"
                        },
                        {
                            "$ref": "form-autocomplete.ref.json"
                        },
                        {
                            "$ref": "form-input.ref.json"
                        },
                        {
                            "$ref": "form-select.ref.json"
                        },
                        {
                            "$ref": "form-tab.ref.json"
                        }
                    ]
                }
            }
        },
        "required": [
            "id",
            "title",
            "elements"
        ]
    }
}